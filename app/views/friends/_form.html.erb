<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :first_name, class:"form-control mb-3",placeholder:"first name"  %>
  </div>

  <div class="field">
    <%= form.text_field :last_name, class:"form-control mb-3",placeholder:"last name" %>
  </div>

  <div class="field">
    <%= form.text_field :email, class:"form-control  mb-3",placeholder:"email"  %>
  </div>

  <div class="field">
    <%= form.text_field :phone, class:"form-control mb-3",placeholder:"phone number"  %>
  </div>

  <div class="field">
    <%= form.text_field :twitter, class:"form-control  mb-3",placeholder:"twitter"  %>
  </div>

  <div class="field">
    <%= form.number_field :user_id, id: :friends_user_id, class:"form-control  mb-3",value: current_user.id , type: :hidden  %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary mb-3" %>
  </div>
<% end %>
