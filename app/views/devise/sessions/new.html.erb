<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3",placeholder:"email"  %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-3",placeholder:"password"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me , class:"form-check-input"%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-secondary my-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
